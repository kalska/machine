    "keybindings": [
        {
            "command": "commandPalette",
            "keys": [
                "ctrl+shift+p"
            ]
        },
        {
            "command": "newTab",
            "keys": [
                "ctrl+t"
            ]
        },
        {
            "command": "closeTab",
            "keys": [
                "ctrl+w"
            ]
        },
        {
            "command": "closePane",
            "keys": [
                "ctrl+shift+d"
            ]
        },
        {
            "command": "copy",
            "keys": [
                "ctrl+c"
            ]
        },
        {
            "command": "paste",
            "keys": [
                "ctrl+v"
            ]
        },
        {
            "command": {
                "action": "splitPane",
